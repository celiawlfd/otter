<h1>Recommend <%= @podcast.title %> to your friends</h1>

<%= simple_form_for [@podcast, @podcastreco]  do |f| %>
  <%= f.association :receiver, collection: current_user.following.map(&:username), prompt: "Please choose one of your friends", :class => "border border-primary", label: "Friend"  %>
  <%= f.input :message %>
  <%= f.submit "send", class: "button-full" %>
<% end %>
