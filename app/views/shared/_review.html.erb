
<div>
  <div class="pb-2">
    <div class="d-flex justify-content-between">
      <% if current_user.is_following?(review.user_id) %>
        <p><strong> <%= review.user.username.capitalize %></strong> - <%= review.rating %> <i class="fa-solid fa-star friends"></i><small class="text-muted"> <%= (review.created_at.strftime("%d %b %Y")) %></small></p>
      <% else %>
        <p><strong><%= review.user.username.capitalize %></strong> - <%= review.rating %> <i class="fa-solid fa-star"></i><small class="text-muted"> <%= (review.created_at.strftime("%d %b %Y")) %></small></p>
      <% end %>
    </div>
    <p><%= review.content %></p>
  </div>
</div>
