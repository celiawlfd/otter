
<h1 class="text-center mb-5 mt-3">Movies</h1>
<div class="massonery-grid">
  <% sum = 0 %>
  <% a = 1 %>
  <% b = 3 %>
  <% @movies.each do |movie| %>
    <% sum +=1  %>
    <div class="div<%= sum %>" style="grid-row: <%= a %> / <%= b %>; grid-column: <%= sum%2 == 0 ? "1/2" : "2/3"%>">
      <div class="row text-center">
        <%= link_to movie_path(movie) do %>
          <%= render "shared/card", culturale: movie, categorie: "Movie", color: "rgba(255, 187, 43, 0.8)", border: "rgb(255, 187, 43)"%>
        <% end %>
      </div>
    </div>
    <% a += 1 %>
    <% b += 1 %>
  <% end %>
</div>
