<%= simple_form_for [movie, movie_review], data: {insert_review_target: "form", action: "submit->insert-in-list#send"}  do |f| %>
  <%= f.input :rating, collection: (1..5).to_a, label: "Rate your experience", input_html: {data: {controller: "star-rating"}, aria_label: false} %>
  <%= f.input :content %>
  <%= f.submit "Send your review" %>
<% end %>
