<div class="container">
  <div class="row">
    <div class="col-6 text-start">
    <p><%= link_to "", lists_path, :class => "fa-solid fa-angles-left"%></p>
    </div>
    <div class="col-6 text-end">
    <%= link_to "Delete list",
      list_path(@list),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
    %>
    </div>
  </div>
    <% if @list.movies.empty? && @list.books.empty? %>
      <p><%= link_to "Find inspo", root_path%></p>
    <% else %>
      <h1 class="text-center mb-5 mt-3"> <%= @list.name %> </h1>
      <div class="movie-cards">
        <% @list.movies.each do |movie| %>
          <div class="row text-center">
            <div class="card movie-card" style="width: 100%, height: 100%; background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('<%= image_path movie.photo_url, crop: :fill %>')">
              <%= link_to movie.title, movie_path(movie, @list) %>
            </div>
          </div>
        <% end %>
        <% @list.books.each do |book| %>
          <div class="row text-center">
            <div class="card book-card" style="width: 100%, height: 100%; background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('<%= image_path book.photo_url, crop: :fill %>')">
              <%= link_to book.title, book_path(book, @list) %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
</div>
