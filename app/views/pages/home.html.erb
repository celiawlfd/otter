<div class="d-flex justify content-between my-2">
  <%= link_to "Movies", movies_path, class: "button-outline  mx-2" %>
  <%= link_to "Books", books_path, class: "button-outline  mx-2" %>
  <%= link_to "Podcasts", podcasts_path, class: "button-outline  mx-2" %>
</div>

<h1 class="text-center my-4">Otter</h1>

  <div class="massonery-grid">
    <% sum = 0 %>
    <% a = 1 %>
    <% b = 3 %>
    <% @culturales.each do |culturale| %>
      <% sum +=1  %>
      <div class="div<%= sum %>" style="grid-row: <%= a %> / <%= b %>; grid-column: <%= sum%2 == 0 ? "1/2" : "2/3"%>">
        <div class="row text-center">
          <% if culturale.is_a?(ListMovie) %>
            <%= link_to movie_path(culturale.movie) do %>
              <%= render "pages/card_feed", user: culturale.list.user, culturale: culturale.movie, categorie: "Movie", color: "rgba(255, 187, 43, 0.8)", border: "rgb(255, 187, 43)"%>
            <% end %>
          <% elsif culturale.is_a?(ListBook) %>
            <%= link_to book_path(culturale.book) do %>
              <%= render "pages/card_feed", user: culturale.list.user, culturale: culturale.book, categorie: "Book", color: "rgba(205, 76, 236, 0.8)", border: "rgb(205, 76, 236)"%>
            <% end %>
          <% elsif culturale.is_a?(ListPodcast) %>
            <%= link_to podcast_path(culturale.podcast) do %>
              <%= render "pages/card_feed", user: culturale.list.user, culturale: culturale.podcast, categorie: "Podcast", color: "rgba(95, 227, 88, 0.8)", border: "rgb(95, 227, 88)"%>
            <% end %>
          <% end %>
        </div>
      </div>
      <% a += 1 %>
      <% b += 1 %>
    <% end %>
  </div>
